# PromptEnchanter Environment Configuration
# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/promptenchanter2.db

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256

# Redis Configuration
REDIS_URL=redis://redis2:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# User Management
USER_REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_ENABLED=false

# Security Settings
FIREWALL_ENABLED=true
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_HOURS=1

# Session Settings
SESSION_DURATION_HOURS=24
REFRESH_TOKEN_DURATION_DAYS=30

# Message Logging
MESSAGE_LOGGING_ENABLED=true

# API Usage Monitoring
API_USAGE_TRACKING_ENABLED=true